{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "instance_type": "m4.large"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "us-west-2",
      "source_ami": "ami-4e79ed36",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ubuntu",
      "ami_name": "postgis-xl-{{timestamp}}",
      "ami_groups": "all",
      "tags": {
        "Name": "postgis-xl",
        "instance_type": "{{user `instance_type`}}"
      },
      "run_tags": {
        "Name": "postgis-xl",
        "instance_type": "{{user `instance_type`}}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "environment",
      "destination": "/home/ubuntu/environment",
      "direction": "upload",
      "pause_before": "30s"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /home/ubuntu/environment /etc/environment"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/install_postgresxl.sh",
        "scripts/install_postgis.sh"
      ]
    }
  ]
}
